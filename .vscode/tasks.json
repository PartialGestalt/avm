{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Rebuild all",
            "type": "shell",
            "command": "make",
            "args": [
                "fresh"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "taskName": "Run tests",
            "type": "shell",
            "command": "make",
            "args": [
                "fresh",
                "test"
            ],
            "windows": {
                "command": ".\\scripts\\test.cmd"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}